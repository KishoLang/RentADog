<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-grey rounded p-4">
          <h2>Upload my Dog</h2>

            <%= simple_form_for(@dog) do |f| %>
              <%= f.input :name %>
              <%= f.input :breed %>
              <%= f.input :age %>
              <%= f.input :gender %>
              <%= f.input :price %>
              <%= f.input :description %>

              <div class="btn btn-success p-2">
                <!--<%= f.submit %> !-->
                <%= f.button :submit, "Upload!" %>
              </div>

            <% end %>

            <%= link_to 'Back', dogs_path %>
      </div>
    </div>
  </div>
</div>
